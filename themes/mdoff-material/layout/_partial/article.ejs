<article class="blog-content mdl-color--white mdl-shadow--4dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
  <% var class_name = ''; if (post.link){ %>
    <h2 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
    </h2>
  <% } else if (post.title){ %>
    <% if (index){ %>
      <h2 itemprop="name">
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
      </h2>
    <% } else { %>
      <h1 class="<%= class_name %>" itemprop="name">
        <%= post.title %>
      </h1>
    <% } %>
  <% } %>
  <div class="content">

    <% if (post.excerpt && index){ %>
      <%- post.excerpt %>
      <% if (theme.excerpt_link){ %>
        <p class="blog-more-link">
          <a href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %></a>
        </p>
      <% } %>
    <% } else { %>
      <%- post.content %>
    <% } %>
    <% if(!page) { %>
        <% post.tags.forEach(function(tag) {
          %>
          <span class="mdl-chip">
            <span class="mdl-chip__text"><a href="<%-config.root%><%-tag.path %>"><%-tag.name %></a></span>
          </span>
          <%
        }); %>
    <div class="blog-date mdl-color-text--primary">
      <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, config.date_format) %></time>
    </div>
    <% } %>
  </div>
</article>
